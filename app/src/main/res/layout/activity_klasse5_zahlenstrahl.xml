<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".klasse5.Klasse5ZahlenstrahlActivity">


    <ImageView
        android:id="@+id/rahmen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:src="@drawable/ic_baseline_crop_free_24"
        android:contentDescription="@string/rahmen_description" />
    <ImageView
        android:id="@+id/rahmen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:src="@drawable/ic_baseline_crop_free_24"
        android:contentDescription="@string/rahmen_description" />
    <ImageView
        android:id="@+id/rahmen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:src="@drawable/ic_baseline_crop_free_24"
        android:contentDescription="@string/rahmen_description" />
    <ImageView
        android:id="@+id/rahmen4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="0dp"
        android:src="@drawable/ic_baseline_crop_free_24"
        android:contentDescription="@string/rahmen_description" />
    <ImageView
        android:id="@+id/paintzahlenstrahl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/zahlenstrahl_description"/>

    <com.michaelvolk.mathegames.MovableTextView
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.michaelvolk.mathegames.MovableTextView
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.michaelvolk.mathegames.MovableTextView
        android:id="@+id/number3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.michaelvolk.mathegames.MovableTextView
        android:id="@+id/number4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>